<!DOCTYPE html>
<html lang="js">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  type='text/css' href="/css/style.css">
    <title>Login</title>
</head>
<body>
    <header>
         <%- include('header.ejs') %>
    </header>

    <% if (errors.length > 0) { %>
        <ul class="errors">
          <% errors.forEach(error =>{ %>
          <li> <%= error %> </li> 
          <% }); %>
        </ul>
        <% } %>
    <dev class="form-box">
        <form action="/login"  method="post" class="login-form">
            <h1 class="login-title">ログイン画面</h1>
            <p>Email</p>
            <dev class="login-box">
             <input type="text" name="email" autofocus="true" class="login-input">
            </dev>
            <p>password</p>
            <dev class="login-box">
                <input type='password' name="password" class="login-input" >
            </dev>
            <dev class="login-submit">
                <input type="submit" value='ログイン'>
            </dev>
        </form>
    </dev>
    <dev class="jumpList">
        <a href="/">トップへ戻る</a>
      </dev>
</body>
</html>