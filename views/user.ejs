<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  type='text/css' href="/css/user.css">
    <title>userList</title>
</head>
<body>
    <dev class='title-container'>
      <h1 class="title">ユーザー一覧</h1>
      <a href="/tell" class="add-url"><img src='/images/plus.png' class="add-btn"></a>
      
   </dev>
    <% userInfo.forEach((userInfo) => { %>
        <li>
          <div class="user-data">
            <span class="listUserName"><%= userInfo.name %></span>
            <span class="listAction"><%= userInfo.phone %></span>
            <form class='delete-user' action="/deleteUser/<%=userInfo.id%>" method="post">
              <input class='delete-btn' type="image" src="/images/delete.png" alt="削除" name="deleteUser">
            </form>
          </div>
        </li>
      <% }) %>
      <dev class="btn">
        <a class="top-btn" href="/">トップへ戻る</a>
      </dev> 
     
</body>
</html>